<meta name='viewport' content='width=device-width, initial-scale=1'/>
<head>
    <link rel="stylesheet" href="main.css">
</head>


<div class="mobileheader"> 
    <form action="/sendstatus" method="post" enctype="multipart/form-data">
        <label>How are you doing?</label>
        <input class="i" id="status" maxlength="300" name="bodytext" type="text" /><br />
        <button class="b" id="button"  name="mobile_text_content" type="submit"> Send </button>
</div>


<div class="feed">
    {{#each feed}}
    <img src="{{this.post.author.avatar}}" height="50px" width="50px"/>  <a href="/profile/{{this.post.author.handle}}">{{this.post.author.handle}}</a>

	<p> {{this.post.record.text}} </p>
		{{#if this.post.embed}}
            {{#each this.post.embed.images}}
              <div class="embed" style="width: 100px; height: 100px">
                <img src="{{this.thumb}}"alt={{this.alt}} width="100%" height="100%">
            </div>
  {{/each}}  {{/if}}
    {{/each}}
</div>